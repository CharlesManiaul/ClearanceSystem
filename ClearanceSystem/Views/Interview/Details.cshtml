@{
    ViewData["Title"] = "Interview Answer Details";
}

@model Interview



<div class="page-header d-print-none">
    <div class="container-xxl">
        <div class="row g-2 align-items-center">
            <div class="col-6">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Details - Interview
                    <h2 class="page-title">
                        Answer of the Employee
                    </h2>
                </div>
            </div>

            <div class="col-auto ms-auto d-print-none">

            </div>

        </div>

    </div>
</div>



<div class="page-body">
    <div class="container-xxl">
        <div class="card">
            <div class="card-header">
                <div>
                    <table class="mt-3">
                        <tr>
                            <td>Employee ID: </td>
                            <td class="text-muted ps-5">@Model.EmpId</td>
                        </tr>
                        <tr>
                            <td>Employee Name: </td>
                            <td class="text-muted ps-5">@Model.EmpName</td>
                        </tr>
                        <tr>
                            <td>Department: </td>
                            <td class="text-muted ps-5">@Model.DepartmentName</td>
                        </tr>
                        <tr>
                            <td>Position: </td>
                            <td class="text-muted ps-5">@Model.Position</td>
                        </tr>        
                    </table>
                </div>
            </div>

            <div class="card-body">
                @if (Model.intForm == null || !Model.intForm.Any())
                {
                    <div class="alert alert-warning text-center">
                        <strong>NO DATA AVAILABLE</strong>
                    </div>
                }
                else
                {
                    @foreach (var item in Model.intForm)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Question @item.QNumber</h5>
                                <p class="card-text">@item.Question?</p>
                                <div class="p-3 bg-primary-lt text-dark rounded">
                                    <strong>Answer:</strong> @(string.IsNullOrEmpty(item.Answer) ? "NO ANSWERS YET" : item.Answer)
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
